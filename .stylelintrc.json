{
  "plugins": ["stylelint-scss"],
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recess-order"
  ],
  "rules": {
    "number-max-precision": 6,
    "scss/load-partial-extension": "never",
    "scss/at-import-partial-extension": null,
    "value-keyword-case": [
      "lower",
      {
        "camelCaseSvgKeywords": true
      }
    ]
  }
}
